<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10dp"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Banking Application"
        android:textColor="#184D47"
        android:textSize="26sp" />

    <Button
        android:id="@+id/viewBtn"
        android:layout_width="280dp"
        android:layout_height="58dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="45dp"
        android:background="@drawable/users" />

    <Button
        android:id="@+id/transactions"
        android:layout_width="280dp"
        android:layout_height="58dp"
        android:layout_below="@id/viewBtn"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/transactions" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="40dp"
        android:background="#c64756" />

    <TextView
        android:id="@+id/designTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/designed_by_saketh"
        android:textColor="#fad586"
        android:textSize="20sp" />

</RelativeLayout>